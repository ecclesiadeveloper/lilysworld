<div class="collection-page container py-12" style="padding-top: 3rem; padding-bottom: 3rem;">
  <h1 class="mb-8 text-center text-3xl font-serif" style="text-align: center; margin-bottom: 2rem; font-family: 'Ahsing', serif; font-size: 2.25rem;">
    {{ collection.title }}
  </h1>

  <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8" style="display: grid; grid-template-columns: repeat(1, minmax(0, 1fr)); gap: 2.5rem 1.5rem; @media (min-width: 640px) { grid-template-columns: repeat(2, minmax(0, 1fr)); } @media (min-width: 1024px) { grid-template-columns: repeat(4, minmax(0, 1fr)); }">
    {% for product in collection.products %}
      <div class="group relative" style="position: relative;">
        <!-- Image -->
        <div class="aspect-square w-full overflow-hidden rounded-md bg-white lg:aspect-none lg:h-80" style="aspect-ratio: 1 / 1; width: 100%; overflow: hidden; border-radius: 0.375rem; background-color: white;">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                class="h-full w-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                style="height: 100%; width: 100%; object-fit: cover; object-position: center; transition: transform 0.3s;"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </a>
        </div>
        
        <!-- Info -->
        <div class="mt-4 flex justify-between" style="margin-top: 1rem; display: flex; justify-content: space-between;">
          <div>
            <h3 class="text-sm text-neutral-700" style="font-size: 0.875rem; color: #404040;">
              <a href="{{ product.url }}">
                <span aria-hidden="true" class="absolute inset-0"></span>
                {{ product.title }}
              </a>
            </h3>
          </div>
          <p class="text-sm font-medium text-neutral-900" style="font-size: 0.875rem; font-weight: 500; color: #171717;">
            {{ product.price | money }}
          </p>
        </div>
      </div>
    {% else %}
      <p class="col-span-full text-center text-neutral-500" style="grid-column: 1 / -1; text-align: center; color: #737373;">
        No products found in this collection.
      </p>
    {% endfor %}
  </div>
  
  {% if paginate.pages > 1 %}
    <div class="mt-12 text-center" style="margin-top: 3rem; text-align: center;">
      {{ paginate | default_pagination }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection Grid",
  "settings": []
}
{% endschema %}
