<div class="product-page container py-12" style="padding-top: 3rem; padding-bottom: 3rem;">
  <div class="flex flex-col gap-12 md:flex-row" style="display: flex; flex-direction: column; gap: 3rem; @media (min-width: 768px) { flex-direction: row; }">
    <!-- Product Media -->
    <div class="product-media w-full md:w-1/2" style="flex: 1;">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 1000 }}"
          alt="{{ product.featured_image.alt | escape }}"
          width="1000"
          height="{{ 1000 | divided_by: product.featured_image.aspect_ratio | ceil }}"
          loading="eager"
          style="width: 100%; height: auto; border-radius: 0.5rem; object-fit: cover;"
        >
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="product-info w-full md:w-1/2" style="flex: 1; display: flex; flex-direction: column; gap: 1.5rem;">
      <h1 class="text-3xl font-serif" style="font-family: 'Ahsing', serif; font-size: 2.25rem;">{{ product.title }}</h1>
      
      <div class="product-price text-xl" style="font-size: 1.25rem;">
        {{ product.price | money }}
      </div>

      <div class="product-description rte" style="color: #525252;">
        {{ product.description }}
      </div>

      <!-- Add to Cart Form -->
      {% form 'product', product %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        
        <button
          type="submit"
          name="add"
          class="w-full rounded-full bg-black px-8 py-4 text-white hover:bg-neutral-800"
          style="width: 100%; border-radius: 9999px; background-color: black; padding: 1rem 2rem; color: white; font-weight: 500; cursor: pointer; border: none;"
          {% unless product.available %}disabled{% endunless %}
        >
          {% if product.available %}
            Add to Cart
          {% else %}
            Sold Out
          {% endif %}
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Information",
  "settings": []
}
{% endschema %}
