  <div class="mx-auto flex w-full max-w-7xl flex-col items-start justify-between gap-6 md:flex-row md:items-center" style="max-width: 80rem; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
    <div>
      <a href="/" class="flex items-center gap-2 md:pt-1" style="color: var(--color-accent); display: flex; align-items: center; text-decoration: none;">
        <span style="font-family: 'Ahsing', serif; font-size: 2.25rem;">{{ shop.name }}</span>
      </a>
    </div>
    
    <div class="flex flex-col gap-2 md:flex-row md:gap-6" style="display: flex; gap: 1.5rem;">
      <a href="/collections/all">Shop</a>
