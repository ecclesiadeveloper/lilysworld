<div class="sticky top-0 z-50 flex w-full flex-col gap-4 border-b border-pink-900/10 bg-white/30 px-6 py-4 backdrop-blur-md dark:border-white/10 dark:bg-black/30 md:flex-row md:items-center md:gap-0" style="border-bottom: 1px solid rgba(131, 24, 67, 0.1); background-color: rgba(255, 255, 255, 0.3); backdrop-filter: blur(12px);">
  <div class="flex items-center justify-between w-full md:w-auto">
    <a href="/" class="mr-8 text-lg font-medium tracking-tight hover:opacity-80 transition-opacity" style="color: var(--color-accent);">
      <span>Home</span>
    </a>
  </div>

  <ul class="hidden gap-8 text-sm md:flex font-medium tracking-wide" style="display: flex; gap: 2rem; list-style: none;">
    <li>
      <a href="/collections/all" class="underline-offset-4 hover:underline decoration-pink-900/50 hover:text-pink-900">
        Shop
      </a>
    </li>
    <li>
      <a href="/pages/about" class="underline-offset-4 hover:underline decoration-pink-900/50 hover:text-pink-900">
        About
      </a>
    </li>
  </ul>

  <div class="flex flex-1 items-center justify-end gap-4 md:ml-auto" style="display: flex; flex: 1; justify-content: flex-end; gap: 1rem;">
    <form action="/search" method="get" role="search" class="search-form" style="position: relative;">
      <input
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="Search for items..."
        class="text-md w-full rounded-lg border bg-white px-4 py-2"
        style="border: 1px solid #e5e5e5; padding: 0.5rem 1rem; border-radius: 0.5rem;"
      >
      <input type="hidden" name="type" value="product">
    </form>
    
    <a href="/cart" class="cart-icon">
      Cart (<span id="CartCount">{{ cart.item_count }}</span>)
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
